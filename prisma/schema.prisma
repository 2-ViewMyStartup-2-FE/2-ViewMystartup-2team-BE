generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                  String       @id @default(uuid())
  logo                String       @default("")
  name                String
  description         String
  category            String
  revenue             BigInt
  employee            Int
  actualInvestment    BigInt       @default(0)
  virtualInvestment   BigInt       @default(0)
  myChosenCount       Int          @default(0)
  comparedChosenCount Int          @default(0)
  Investments         Investment[]
}

model Investment {
  id           String  @id @default(uuid())
  investorName String
  amount       BigInt
  comment      String
  password     String
  company      Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId    String
}
