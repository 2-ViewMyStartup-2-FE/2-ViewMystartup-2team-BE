generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                  String     @id @default(uuid())
  logo                String     @default("")
  name                String
  description         String
  category            String
  revenue             Int
  employee            Int
  totalInvestment     BigInt     @default(0)
  actualInvestment    BigInt     @default(0)
  virtualInvestment   BigInt     @default(0)
  myChosenCount       Int        @default(0)
  comparedChosenCount Int        @default(0)
  createdAt           DateTime   @default(now())
  investor            Investor[]
}

model Investor {
  id               String  @id @default(uuid())
  name             String
  investmentAmount BigInt  @default(0)
  comment          String
  password         Int
  company          Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId        String
}
